{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Amplify Hosting configuration for personal site",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "appId": {
      "Type": "String"
    }
  },
  "Resources": {},
  "Outputs": {
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "HostingEndpoint": {
      "Value": {
        "Fn::Sub": "https://${env}.${appId}.amplifyapp.com"
      }
    },
    "BucketName": {
      "Value": {
        "Fn::Sub": "amplify-${appId}-${env}"
      }
    }
  }
}