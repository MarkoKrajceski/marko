{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DynamoDB table for personal site data storage",
  "Parameters": {
    "tableName": {
      "Type": "String"
    },
    "partitionKeyName": {
      "Type": "String"
    },
    "partitionKeyType": {
      "Type": "String"
    },
    "sortKeyName": {
      "Type": "String"
    },
    "sortKeyType": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "DynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": {
          "Fn::Sub": "${tableName}-${env}"
        },
        "AttributeDefinitions": [
          {
            "AttributeName": {
              "Ref": "partitionKeyName"
            },
            "AttributeType": {
              "Ref": "partitionKeyType"
            }
          },
          {
            "AttributeName": {
              "Ref": "sortKeyName"
            },
            "AttributeType": {
              "Ref": "sortKeyType"
            }
          }
        ],
        "KeySchema": [
          {
            "AttributeName": {
              "Ref": "partitionKeyName"
            },
            "KeyType": "HASH"
          },
          {
            "AttributeName": {
              "Ref": "sortKeyName"
            },
            "KeyType": "RANGE"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "TimeToLiveSpecification": {
          "AttributeName": "ttl",
          "Enabled": true
        },
        "PointInTimeRecoverySpecification": {
          "PointInTimeRecoveryEnabled": false
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "DynamoDBTable"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "DynamoDBTable",
          "Arn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}